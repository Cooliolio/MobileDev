<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_view_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/colorGreen"
    android:clickable="true"
    tools:context=".ViewFragments.PostDetailFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_title"
                style="@style/DetailTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@color/colorGreen"
                android:gravity="end"
                android:padding="5dp"
                android:text="This is the title of the post" />


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/iv_detail_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:elevation="10dp"
                app:auto_cycle="true"
                app:delay="0"
                app:period="4000"
                app:placeholder="@mipmap/ic_launcher_foreground" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="1000dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"

                        android:text="Location_" />


                    <TextView
                        android:id="@+id/tv_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Date_" />

                    <ViewSwitcher
                        android:id="@+id/vs_read_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ly_read"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_detail_price"
                                style="@style/DetailInfoStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price_" />

                            <TextView
                                android:id="@+id/tv_detail_description"
                                style="@style/InfoStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Description_" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price â‚¬" />

                            <EditText
                                android:id="@+id/et_detail_price"
                                style="@style/DetailInfoStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price_" />


                            <EditText
                                android:id="@+id/et_detail_description"
                                style="@style/InfoStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price_" />

                            <Button
                                android:id="@+id/btn_save_changes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/btn_design"
                                android:text="Save" />

                            <Button
                                android:id="@+id/btn_delete_post"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_design"
                                android:text="Delete" />
                        </LinearLayout>
                    </ViewSwitcher>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="1000dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailInfoStyle"
                        android:text="Posted by"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_design"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_profile" />

                        <TextView
                            android:id="@+id/tv_detail_profilename"
                            style="@style/InfoStyle"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_design"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:id="@+id/tv_detail_profilenumber"
                            style="@style/InfoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="test123" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_design"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:id="@+id/tv_detail_profileemmail"
                            style="@style/InfoStyle"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>