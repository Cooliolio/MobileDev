<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFragments.ProfileDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">
        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:elevation="4dp"
            android:paddingBottom="24dp">
            <TextView
                style="@style/DetailTitleStyle"
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Furkan Yavuz" />

            <TextView
                android:id="@+id/tv_signupdate_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="(BERinGEN)"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_layout"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">
            <TextView
                style="@style/DetailInfoStyle"
                android:id="@+id/tv_zipcode_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postcode"
                />
            <TextView

                style="@style/DetailInfoStyle"
                android:id="@+id/tv_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telfoon"
                />
            <TextView
                style="@style/DetailInfoStyle"
                android:id="@+id/tv_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>